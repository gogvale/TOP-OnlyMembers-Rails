<section class="contact-clean">
    <form method="post">
        <h2 class="text-center">Edit Post</h2>
        <small><%= @post.user.name %></small>
        <div class="mb-3"></div>
        <div class="mb-3"><textarea class="form-control" name="message" placeholder="Message" rows="14"><%= @post.body %></textarea></div>
        <div class="mb-3">
            <%= link_to 'Cancel', posts_path, class: 'btn btn-primary', role: 'button', style: 'background: var(--bs-red) !important;' %>
            <button class="btn btn-primary" type="submit">send </button>
        </div>
    </form>
</section>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
