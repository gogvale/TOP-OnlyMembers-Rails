<div class="container" style="padding: 0 3em;">
    <div class="row">
        <div class="col-md-12">
            <h1 class="d-lg-flex justify-content-lg-center" style="padding: 1em;color: var(--bs-gray);"><%= params[:user_id] ? (user_signed_in? ? User.find(params[:user_id]).name : 'Anonymous') : 'News' %> Feed</h1>
        </div>
    </div>
    <div class="row">
        
        <% @posts.each do |post| %>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">
                        <%= link_to (user_signed_in? ? post.user.name : 'Anonymous'), user_posts_path(post.user), class: 'text-success' %>
                    </h4>
                    <h6 class="text-muted card-subtitle mb-2"><%= post.updated_at %></h6>
                    <p class="card-text"><%= post.body %></p>
                    
                    <% if current_user == post.user %>
                        <%= link_to 'Edit', edit_post_path(post), class: 'card-link' %>
                        <%= link_to 'Delete', post , method: :delete, class: 'card-link text-danger', data: { confirm: 'Are you sure you want to delete this?' } %>
                    <% end %>
                    
                </div>
            </div>
        </div>
        <% end %>
    </div>
</div>
<%= render partial: 'shared/pagination' %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>