<section class="login-clean">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <h2 class="visually-hidden">Log in</h2>
  <div class="illustration"><i class="icon ion-locked"></i></div>
  <div class="mb-3">
    <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email", placeholder: 'Email'%>
  </div>

  <div class="mb-3">
    <%= f.password_field :password, class: 'form-control', autocomplete: "current-password", placeholder: 'Password'%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.submit "Log in", class: 'btn btn-primary d-block w-100' %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>
</section>