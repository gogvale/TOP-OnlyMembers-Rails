<section class="login-clean">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <h2 class="visually-hidden">Sign up</h2>
  <div class="illustration"><i class="icon ion-locked"></i></div>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-3">
    <%= f.text_field :name, class: 'form-control', autofocus: true, autocomplete: 'name', placeholder: 'Username', value: nil %>
  </div>

  <div class="mb-3">
    <%= f.email_field :email,class: 'form-control', autofocus: true, autocomplete: "email", placeholder: 'Email' %>
  </div>

  <div class="mb-3">
    <%= f.password_field :password,class: 'form-control', autocomplete: "new-password", placeholder: 'Password' %>
  </div>

  <div class="mb-3">
    <%= f.password_field :password_confirmation,class: 'form-control', autocomplete: "new-password", placeholder: 'Confirm Password' %>
  </div>

  <div class="mb-3">
    <%= f.submit "Sign up", class: 'btn btn-primary d-block w-100' %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>

</section>
